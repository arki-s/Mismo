@model Mismo.Models.ApplicationUser;

@{
}

<h1>ユーザー編集</h1>

<form method="post" action="">

    @if (TempData["UserEditError"] != null)
    {
        <div class="text-danger">@TempData["UserEditError"]</div>
    }  
    <div class="form-floating">
        <input name="values" class="form-control" aria-required="true" value="@Model.LastName" />
        <label>姓</label>
        @* <span asp-validation-for="Input.LastName" class="text-danger"></span> *@
    </div>
    <div class="form-floating">
        <input name="values" class="form-control" aria-required="true" value="@Model.FirstName" />
        <label>名</label>
        @* <span asp-validation-for="Input.FirstName" class="text-danger"></span> *@
    </div>
    @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
    <div class="form-floating">
        <input name="values" type="email" class="form-control" autocomplete="username" aria-required="true" value="@Model.Email" />
        <label>Email</label>
        @* <span asp-validation-for="Input.Email" class="text-danger"></span> *@
    </div>
    <label class="control-label">ロール</label>
    <select name="values" class="form-control" aria-required="true">
        @switch (Model.Role)
        {
            case "Member":
                <option selected>Member</option>
                <option>Manager</option>
                break;
            case "Manager":
                <option>Member</option>
                <option selected>Manager</option>
                break;
        }
    </select>
    <div class="form-group">
        <label class="control-label">部門</label>
        <select class="form-control" asp-items="ViewBag.Departments" name="values"></select>
    </div>
    <input type="hidden" name="values" value="@Model.Role" />
    @* <div class="form-group">
        <label class="control-label">パスワードリセット</label>
        <p class="text-danger mb-0">※パスワードリセットした場合、パスワードが強制的に「User123,」になります。</p>
        <select name="values">
            <option selected>リセットしない</option>
            <option>リセットする</option>
        </select>
    </div> *@
     <div class="form-floating">
    <input name="values" type="password" class="form-control" autocomplete="new-password" aria-required="true" minlength="6" maxlength="100"/>
    <label>パスワード</label>
    </div>
    <div class="form-floating">
        <input name="values" type="password" class="form-control" autocomplete="new-password" aria-required="true" minlength="6" maxlength="100" />
    <label>パスワード（確認用）</label>
    </div>
    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">編集情報を保存</button>
</form>
